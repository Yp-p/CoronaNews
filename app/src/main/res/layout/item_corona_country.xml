<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="10dp"
        android:id="@+id/valueCard"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valueConstraint"
            android:foreground="@drawable/border">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="60dp"
                android:id="@+id/Vview1"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview1"
                android:layout_marginStart="80dp"
                android:id="@+id/Vview2"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview2"
                android:layout_marginStart="70dp"
                android:id="@+id/Vview3"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/materialBlue"
                app:layout_constraintLeft_toRightOf="@+id/Vview3"
                android:layout_marginStart="70dp"
                android:id="@+id/Vview4"/>
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/Vview1"
                android:foregroundGravity="center"
                app:cardElevation="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/flagValue"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/Vview1"
                app:layout_constraintRight_toLeftOf="@+id/Vview2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:text="Name"
                android:maxLines="2"
                android:id="@+id/nameValue"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/Vview2"
                app:layout_constraintRight_toLeftOf="@+id/Vview3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Affected"
                android:gravity="center"
                android:maxLines="2"
                android:id="@+id/TaffectedValue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/Vview3"
                app:layout_constraintRight_toLeftOf="@+id/Vview4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Deaths"
                android:gravity="center"
                android:maxLines="2"
                android:id="@+id/TdeathsValue"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/Vview4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Total Recovered"
                android:gravity="center"
                android:maxLines="2"
                android:id="@+id/TrecoveredValue"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>